    <Window.Styles>
        <!-- Default Button Style -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Button Hover State -->
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>

        <!-- Button Pressed State -->
        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#0D47A1"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, *, Auto" Margin="10">
        <!-- Input Section -->
        <TextBlock Text="Enter Link:" Grid.Row="0" Margin="5"/>
        <TextBox Name="LinkTextBox" Grid.Row="1" Width="650" HorizontalAlignment="Left" Margin="5" TextChanged="OnLinkTextChanged"/>

        <!-- Video Preview -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <Image Name="ThumbnailImage" Width="150" Height="150" Margin="5"/>
            <TextBlock Name="MetadataTextBlock" Text="Media metadata will appear here after you paste the link" Margin="10" VerticalAlignment="Top" Width="480"/>
        </StackPanel>

        <!-- Format Selection -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5,10,0,0">
            <TextBlock Text="Select Format:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <RadioButton Name="Mp4RadioButton" Content="MP4" IsChecked="True" Margin="10,0"/>
            <RadioButton Name="Mp3RadioButton" Content="MP3" Margin="10,0"/>
        </StackPanel>

        <!-- Status and Progress -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="5,10,0,0">
            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Name="StatusLabel" Text="Idle" VerticalAlignment="Center"/>
            <ProgressBar Name="ProgressBar" Width="400" Height="20" IsVisible="False" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Logs -->
        <TextBlock Text="Logs:" Grid.Row="5" Margin="5,0,0,0"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Row="6" Margin="5">
            <TextBox Name="LogsTextBox" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True"/>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Center" Margin="10">
            <!-- Download Button -->
            <Button Name="DownloadButton" Width="140" Margin="5" Background="{DynamicResource SystemControlBackgroundAccentBrush}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <PathIcon Data="{StaticResource DownloadIconGeometry}" Width="20" Height="20" Margin="0,0,5,0" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock Text="Download" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </StackPanel>
            </Button>

            <!-- Cancel Button -->
            <Button Name="CancelButton" Width="140" Margin="5" Background="{DynamicResource SystemControlBackgroundAccentBrush}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <PathIcon Data="{StaticResource CancelIconGeometry}" Width="20" Height="20" Margin="0,0,5,0" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock Text="Cancel" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </StackPanel>
            </Button>

            <!-- Clear Logs Button -->
            <Button Name="ClearLogsButton" Width="140" Margin="5" Background="{DynamicResource SystemControlBackgroundAccentBrush}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <PathIcon Data="{StaticResource TrashIconGeometry}" Width="20" Height="20" Margin="0,0,5,0" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock Text="Clear Logs" VerticalAlignment="Center" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>